<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/android_info_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/accountinfo"
                    android:layout_width="208dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="171dp"
                    android:text="Account Info"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/accountinfo"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_user_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputFirstName"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/accountinfo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:hint="First Name">

                    <EditText
                        android:id="@+id/firstName"
                        style="@style/modifiedEditText"
                        android:inputType="text" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputLastName"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/textInputFirstName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:hint="Last Name">

                    <EditText
                        android:id="@+id/lastName"
                        style="@style/modifiedEditText"
                        android:inputType="text" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputLastName"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/divider"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_address_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputAddress"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:hint="Address">

                <EditText
                    android:id="@+id/address"
                    style="@style/modifiedEditText"
                    android:inputType="text" />
                </android.support.design.widget.TextInputLayout>
                <!--
                <fragment
                    android:id="@+id/autocomplete_fragment"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name=
                        "com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    />
                </android.support.design.widget.TextInputLayout>
                -->
                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputAddress"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/divider2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_call_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputphone"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Phone">

                    <EditText
                        android:id="@+id/phone"
                        style="@style/modifiedEditText"
                        android:inputType="phone"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputphone"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/divider3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_company_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textCompanyName"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Company Name">

                    <EditText
                        android:id="@+id/companyName"
                        style="@style/modifiedEditText"
                        android:inputType="text"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textCompanyName"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <TextView
                    android:id="@+id/securityinfo"
                    android:layout_width="208dp"
                    android:layout_height="36dp"
                    android:layout_below="@+id/divider4"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="171dp"
                    android:text="Security"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/securityinfo"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_account_box_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputUsername"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/securityinfo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="User Name">

                    <EditText
                        android:id="@+id/username"
                        style="@style/modifiedEditText"
                        android:inputType="text"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputUsername"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/divider5"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_password_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputPassword"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/divider5"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    app:counterEnabled="true"
                    app:counterMaxLength="150"
                    app:passwordToggleEnabled="true"
                    android:hint="Password">

                    <EditText
                        android:id="@+id/password"
                        style="@style/modifiedEditText"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputPassword"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />


                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/divider6"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_email_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputEmail"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/divider6"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView9"
                    android:hint="Email">

                    <EditText
                        android:id="@+id/email"
                        style="@style/modifiedEditText"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputEmail"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/divider7"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_security_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/Inputspinner1"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider7"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView10">

                    <Spinner
                        android:id="@+id/spinner1"
                        style="@style/modifiedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:maxLines="1"
                        android:prompt="@string/app_name" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputAnswer1"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/Inputspinner1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Answer">

                    <EditText
                        android:id="@+id/answer1"
                        style="@style/modifiedEditText"
                        android:layout_below="@+id/spinner1"
                        android:inputType="text"
                        android:maxLines="1" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/Inputspinner2"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/textInputAnswer1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4">

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputAnswer2"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/Inputspinner2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Answer">

                    <EditText
                        android:id="@+id/answer2"
                        style="@style/modifiedEditText"
                        android:layout_below="@+id/spinner2"
                        android:inputType="text"
                        android:maxLines="1" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </ScrollView>
</LinearLayout>