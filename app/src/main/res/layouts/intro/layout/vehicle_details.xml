<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/android_info_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_car_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputvehicleVin"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView2"
                    android:hint="Information">

                    <EditText
                        android:id="@+id/vehicleVin"
                        android:inputType="text"
                        style="@style/modifiedEditText"/>

                </android.support.design.widget.TextInputLayout>


                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputvehicleVin"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/divider"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_plate_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputplateNumber"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Plate Number">

                    <EditText
                        android:id="@+id/plateNumber"
                        android:inputType="text"
                        style="@style/modifiedEditText"/>

                </android.support.design.widget.TextInputLayout>


                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputplateNumber"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/divider3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_make_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputmake"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Make">

                    <EditText
                        android:id="@+id/make"
                        android:inputType="text"
                        style="@style/modifiedEditText"/>

                </android.support.design.widget.TextInputLayout>


                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputmake"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/divider4"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_model_number_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputmodel"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Model">

                    <EditText
                        android:id="@+id/model"
                        android:inputType="text"
                        style="@style/modifiedEditText"/>

                </android.support.design.widget.TextInputLayout>

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputmodel"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/divider5"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_calender_range_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputyear"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider5"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Year">

                    <EditText
                        android:id="@+id/year"
                        android:inputType="text"
                        style="@style/modifiedEditText"/>

                </android.support.design.widget.TextInputLayout>



                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputyear"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/divider7"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_type_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputvehicleType"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider7"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Type">

                    <EditText
                        android:id="@+id/vehicleType"
                        android:inputType="text"
                        style="@style/modifiedEditText"/>

                </android.support.design.widget.TextInputLayout>


                <View
                    android:id="@+id/divider8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputvehicleType"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />


                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/divider8"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="31dp"
                    android:src="@drawable/ic_color_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputvehicleColor"
                    style="@style/parent"
                    android:layout_width="188dp"
                    android:layout_height="66dp"
                    android:layout_below="@+id/divider8"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:hint="Color">

                    <EditText
                        android:id="@+id/vehicleColor"
                        android:inputType="text"
                        style="@style/modifiedEditText"/>

                </android.support.design.widget.TextInputLayout>


                <View
                    android:id="@+id/divider9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textInputvehicleColor"
                    android:layout_marginTop="16dp"
                    android:background="@color/quantum_bluegrey100" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputprimaryVehicle"
                    android:layout_width="315dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/divider9"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/imageView4">

                    <CheckBox
                        android:id="@+id/primaryVehicle"
                        style="@style/parent"
                        android:text="Primary Vehicle"
                        android:textSize="20dp" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>
</LinearLayout>